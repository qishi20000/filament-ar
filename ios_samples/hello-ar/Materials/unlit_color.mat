material {
    name : "Shadow plane",
    shadingModel : unlit,
    blending : transparent
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        // baseColor defines the color and opacity of the final shadow
        material.baseColor = vec4(0.8, 0.8, 0.2, 0.4);
    }
}
